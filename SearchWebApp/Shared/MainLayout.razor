@inherits LayoutComponentBase

<PageTitle>Search Engine</PageTitle>

<div class="app-container">
    <!-- Collapsible Sidebar -->
    <div class="sidebar @(sidebarClosed ? "closed" : "")">
        <div class="sidebar-content">
            <nav class="sidebar-nav">
                <a href="/" class="sidebar-nav-item">
                    <span class="icon icon-home"></span>
                    Home
                </a>
                <a href="/search" class="sidebar-nav-item">
                    <span class="icon icon-search"></span>
                    Search Engine
                </a>
            </nav>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Bar with Menu Toggle -->
        <div class="top-bar">
            <button class="btn-ghost" @onclick="ToggleSidebar" title="Toggle sidebar">
                <span class="icon icon-menu"></span>
                <span class="sr-only">Toggle sidebar</span>
            </button>
            <h1 class="text-lg font-medium">Search Engine</h1>
        </div>

        <!-- Content Area -->
        <div class="content-area">
            @Body
        </div>
    </div>
</div>

@code {
    private bool sidebarClosed = true; // Start with sidebar closed like Claude

    private void ToggleSidebar()
    {
        sidebarClosed = !sidebarClosed;
    }
}
